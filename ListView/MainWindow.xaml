<Window x:Class="ListView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListView"
        mc:Ignorable="d"
        Title="WPF - ListView" Height="450" Width="800"
        FontSize="25"
        >
        
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Name="txtEntry" Height="35" />

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                
            </Grid.ColumnDefinitions>
            <!--<Rectangle Fill="Red"/>
            <Rectangle Grid.Column="1" Fill="Green"/>
            <Rectangle Grid.Column="2" Fill="Blue" />-->
            <Button Grid.Column="0" Width="auto" Content="Add" Name="btbAdd"  HorizontalAlignment="Left"          Click="btbAdd_Click" />
            <Button Grid.Column="1" Width="auto" Content="Delete" Name ="btnDelete"  HorizontalAlignment="Left"     Click="btnDelete_Click" />
            <Button Grid.Column="2" Width="auto" Content="Clear" Name="btnClear"  HorizontalAlignment="Left"        Click="btnClear_Click" />
        </Grid>
        <!--<Button Grid.Column="1" Width="100" Content="Add" Name="btbAdd"    HorizontalAlignment="Left" Margin="5,0,0,0" Click="btbAdd_Click" />
        <Button Grid.Column="1" Width="100" Content="Delete" Name ="btnDelete"  HorizontalAlignment="Left" Margin="105,0,0,0" Click="btnDelete_Click" />
        <Button Grid.Column="1" Width="100" Content="Clear" Name="btnClear"  HorizontalAlignment="Left" Margin="205,0,0,0" Click="btnClear_Click" />-->

        <ListView Name="lvEtries" Grid.Row="1" Grid.ColumnSpan="2" />

    </Grid>
</Window>
